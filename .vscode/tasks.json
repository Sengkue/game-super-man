{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Superman Game",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-Wall",
                "-Wextra",
                "-O2",
                "main.cpp",
                "Game.cpp",
                "Superman.cpp",
                "Ghost.cpp",
                "Projectile.cpp",
                "ParticleSystem.cpp",
                "ResourceManager.cpp",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                "-lsfml-audio",
                "-o",
                "SupermanVsGhost"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-Wall",
                "-Wextra",
                "-g",
                "-DDEBUG",
                "main.cpp",
                "Game.cpp",
                "Superman.cpp",
                "Ghost.cpp",
                "Projectile.cpp",
                "ParticleSystem.cpp",
                "ResourceManager.cpp",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                "-lsfml-audio",
                "-o",
                "SupermanVsGhost_debug"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Run Game",
            "type": "shell",
            "command": "${workspaceFolder}/SupermanVsGhost",
            "windows": {
                "command": "${workspaceFolder}\\SupermanVsGhost.exe"
            },
            "group": "test",
            "dependsOn": "Build Superman Game",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "rm",
            "args": [
                "-f",
                "SupermanVsGhost",
                "SupermanVsGhost.exe",
                "SupermanVsGhost_debug"
            ],
            "windows": {
                "command": "del",
                "args": [
                    "/Q",
                    "SupermanVsGhost.exe",
                    "SupermanVsGhost_debug.exe"
                ]
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Build with CMake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--config",
                "Release"
            ],
            "group": "build",
            "dependsOn": "Configure CMake",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "Configure CMake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "build",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}